package dineshdkj;
import java.util.*;

public class Stars_patterns {
	public static void main(String args[])
	{
		Scanner scan = new Scanner(System.in);
		int ipt = scan.nextInt();
		
		for(int i=0;i<ipt;i++)
		{
			for(int j=0;j<ipt;j++)
			{
				if(i==0 || j==0||i==ipt-1||j==ipt-1)
				{
					System.out.print("* ");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println();
		}
		
	}

}
